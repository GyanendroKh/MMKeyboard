<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/os_mainView"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/md_main_bg">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <android.support.v7.widget.CardView
      android:id="@+id/aboutCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/card_dimens"
      app:cardCornerRadius="@dimen/card_dimens"
      app:cardElevation="@dimen/card_dimens">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_rel_margin">
      
        <TextView
          android:id="@+id/text1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/open_source_text"
          android:textSize="17sp"
          android:textColor="#000" />

        <android.support.v7.widget.AppCompatButton
          style="@style/Widget.AppCompat.Button"
          android:id="@+id/os_github"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_below="@+id/text1"
          android:paddingEnd="10dp"
          android:paddingStart="10dp"
          android:background="@drawable/about_dev_btn"
          android:text="@string/link_to_github" />

      </RelativeLayout>

    </android.support.v7.widget.CardView>

  </ScrollView>
</RelativeLayout>