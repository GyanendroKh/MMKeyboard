<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/md_main_bg"
  android:visibility="visible"
  tools:context="com.gyanendrokh.meiteimayek.keyboard.activities.SplashActivity"
  android:gravity="center_horizontal">

    <ImageView
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_above="@+id/splashWelcomeText"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="15dp"
      android:src="@mipmap/ic_launcher" />

    <TextView
      android:id="@+id/splashWelcomeText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:text="@string/splash_welcome"
      android:textColor="#fff"
      android:textSize="18sp" />

    <ProgressBar
      style="?android:attr/progressBarStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/splashWelcomeText"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="18dp"
      android:visibility="visible" />

    <include 
        layout="@layout/developed_w_by"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
